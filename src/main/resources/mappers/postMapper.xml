<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.wolen.justagram.post.dao.PostDAO">


	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{title}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	
	</insert>
	
	<select id="selectPostList" parameterType="map"
	 resultType="com.wolen.justagram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		ORDER BY `createdAt` DESC
	
	</select>


</mapper>